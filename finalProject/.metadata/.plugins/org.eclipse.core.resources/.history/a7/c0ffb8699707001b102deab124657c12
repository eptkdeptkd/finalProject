<select id="getTotOrder" parameterType="cc.factory.com.dto.orderParam" resultType="cc.factory.com.dto.orderParam">
	SELECT ID, SEQ, COFFEE_NAME, SHOT, SYRUP, ASK
	FROM (
	 SELECT ROW_NUMBER()OVER(ORDER BY A.SEQ) AS RNUM,
	  FROM CC_ORDER A
	  JOIN CC_ORDER_DETAIL B ON A.SEQ = B.ORDER_SEQ
	 WHERE A.ODATE >= #{today} AND A.ID = #{id}
	 ORDER BY A.SEQ
	)
	WHERE 
</select>

